<%- include('../partials/headAndNav',{user:user}) %>

  <div class="post-card">
      <img src="<%= posts.img %>" alt="...">
      <h5><%= posts.username %></h5>
      <p>Company: <%= posts.compName %></p>
      <p>Industry: <%= posts.industry %></p>
      <p>Direction: <%= posts.upDown %></p>
      <p>Prediction: <%= posts.prediction %></p>
      <div>
        <% for (let i = 0; i < posts.comments.length; i++) { %>
          <p>User: <%=posts.comments[i].username %></p>
          <p>Comment: <%=posts.comments[i].comment %></p>
      <%  } %>
      <div>
        <Form class="form" method="POST" action="/posts/<%= posts._id %>/comment?_method=PUT">
                <input hidden type="text" value="<%=user.username %>" name="username" id="username">
                <input hidden type="text" value="<%=user.compName %>" name="compName" id="compName">
                <input hidden type="text" value="<%=user.img %>" name="img" id="img">
                <input hidden type="text" value="<%=user.industry %>"  name="industry" id="industry">
                <input hidden type="text" value="<%=user.upDown %>" name="upDown" id="upDown">
                <input hidden type="text" value="<%=user.prediction%>" name="prediction" id="prediction">
            <div>
                <label disabled="disabled" for="comments.username"> <%= user %> </label>
                <input type="text" name="comments.username" id="comments.username">
            </div>
            <div>
                <textarea name="comments.comment" id="comments.comment" rows="4" cols="50"></textarea>
            </div>
            <input type="submit" value="Submit new post">
        </Form>
    
    </div>

      </div>
      <div class="btn-group">
          <form method="POST" action="/posts/<%= posts._id %>?_method=DELETE">
            <a href="/posts/<%= posts._id %>/edit" class="btn btn-primary">Edit</a>
          <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  
  
  

<%- include('../partials/footer') %>