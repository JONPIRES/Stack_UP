<%- include('../partials/headAndNav',{user:user}) %>

<div class="container">
    <div class="row">
        <% for (let i = 0; i < posts.length; i++) { %>
        <div class="card">
            <% if (posts[i].img) { %>
            <img src="<%= posts[i].img %>" alt="<%= posts[i].username %>">
            <% } else { %>
            <img src="#" style="display:none;">
            <% } %>
            <div class="card-body">
                <h2 class="card-title"><%= posts[i].name %></h2>
                <p class="card-text">Company: <%= posts[i].compName %></p>
                <p class="card-text">Direction: <%= posts[i].upDown %></p>
                <a href="/posts/<%= posts[i]._id %>" class="btn">See post</a>
            </div>
        </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>


