<%- include('../partials/headAndNav') %>
<div class="container">
    <div class="row">
      <div class="card">
        <img src="<%= posts.img %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= posts.username %></h5>
          <p class="card-text">Industry: <%= posts.industry %></p>
          <a href="/posts/<%= posts._id %>/edit" class="btn btn-primary">Edit</a>
          <form method="POST" action="/posts/<%= posts._id %>?_method=DELETE" class="delete-form">
            <button class="btn btn-danger" type="submit">Delete Me</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  

<%- include('../partials/footer') %>