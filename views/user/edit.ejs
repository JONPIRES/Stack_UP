<%- include('../partials/headAndNav' {user:user}) %>

<div>
    <h1>Edit <%= user.fName %> <%= user.lName %> </h1>

<form method="POST" action="/users/<%= user._id %>/edit?_method=PUT">

        <label for="username">Username:</label>
        <input type="text" id="username" name="username" value="<%= user.username %>">

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= user.email %>">

        <label for="fName">First Name:</label>
        <input type="text" id="fName" name="fName" value="<%= user.fName %>">

        <label for="lName">Last Name:</label>
        <input type="text" id="lName" name="lName" value="<%= user.lName %>">

        <label for="dob">Date of Birth</label>
        <input type="date" id="dob" name="dob" value="<%= user.dob %>">

        <label for="img">Image:</label>
        <input type="text" id="img" name="img" value="<%= user.img %>">

    <button class="btn btn-danger" type="submit"> Save Changes </button>
</form>
</div>

<%- include('../partials/footer') %>